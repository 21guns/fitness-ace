<!--index.wxml-->
<view class="container-plan">
  <view class="header">
    <picker class="picker"
    mode="date"
    value="{{date}}"
    bindchange="bindDateChange"
    >
    {{plan.date}}
    </picker>

    <picker class="picker"
    mode="selector"
    range='{{topics}}'
    bindchange="bindTopicChange"
    >
    {{topics[plan.topic]}}
    </picker>
  </view>

  <view class="group" wx:for="{{plan.groups}}" wx:key="{{index}}" wx:for-index="index" wx:for-item="group"> 
    <view class="group-line">
      <label class="item" for="">组数</label>
      <input class="item" data-group='{{group.showId}}' bindinput="bindCountInput" value="{{group.count}}" placeholder="fgsdfgs  "  />
    </view>
    <view class="group-line">
      <label class="item" for="">间隔(秒)</label>
      <input class="item" data-group='{{group.showId}}' bindinput="bindIntervalInput" value="{{group.interval}}" placeholder="dsfs"  />
    </view>

    <view class="action-list" wx:for="{{group.actions}}" wx:key="{{index}}" wx:for-index="index" wx:for-item="action"> 
      <view>
        <view class="group-line">
          <label class="item" for="">动作名称</label>
          <input id='{{action.showId}}' data-group='{{group.showId}}' class="item" placeholder="dsfs" bindinput="bindNameInput"  value="{{action.name}}" placeholder="dsfs"  />
        </view>
        <view class="group-line">
          <label class="item" for="">每组重量</label>
          <input id='{{action.showId}}' data-group='{{group.showId}}' class="item" placeholder="dsfs" bindinput="bindWeightInput" value="{{action.weight}}" placeholder="dsfs"  />
        </view>
        <view class="group-line">
          <label class="item" for="">每组次数</label>
          <input id='{{action.showId}}' data-group='{{group.showId}}' class="item" placeholder="dsfs" bindinput="bindFrequencyInput" value="{{action.frequency}}" />
        </view>
      </view>
      <view class="action-del">
        <button id='{{action.showId}}' data-group='{{group.showId}}' class="action-button-del" bindtap="delAction">删除</button>
      </view>

    </view>
    <view><button id='{{group.showId}}' data-group='{{group.showId}}'  class="action-button" bindtap="addAction">添加</button></view>


  </view>
  <view><button id='{{group.showId}}' data-group='{{group.showId}}'  class="group-button" bindtap="addGroup">添加</button></view>

</view>
